<link rel="stylesheet" href="/css/card_resume.css">

<% if(locals.user && locals.user.usertype == 'candidate') {%>
<div class="container mt-2">
    <h4 class="mb-4 text-center">CANDIDATE RESUME</h4>
    <form action="/users/update/<%= locals.user._id%>" enctype="multipart/form-data" method="POST">
    <div class="row border p-5 shadow-lg">
        <div class="col-lg-3">

                <div class="form-group">
                  <label class="text-info" for="exampleInputname">Name</label>
                    <input type="text" class="form-control" name="name" id="exampleInputname" value="" placeholder="Enter Name">
                </div>
                <div class="form-group">
                  <label class="text-info" for="email">Email</label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="Enter email">
                </div>
                <div class="form-group">
                  <label class="text-info" for="number">Phone Number</label>
                    <input type="number" class="form-control" name="phone" id="number"  placeholder="Enter Phone">
                </div>
                <div class="form-group">
                  <label class="text-info" for="city">Current City</label>
                    <input type="text" class="form-control" id="city"  name="city" placeholder="City">
                </div>
                <fieldset class="form-group">
                    <div class="row">
                      <legend class="col-form-label col-sm-4 pt-0">Gender</legend>
                      <div class="col-sm-8">
                        <div class="form-check">
                          <input class="form-check-input" type="radio" name="gender" id="gridRadios1" value="male" checked>
                          <label class="form-check-label" for="gridRadios1">
                            Male
                          </label>
                        </div>
                        <div class="form-check">
                          <input class="form-check-input" type="radio" name="gender" id="gridRadios2" value="female">
                          <label class="form-check-label" for="gridRadios2">
                            Female
                          </label>
                        </div>
                        <div class="form-check disabled">
                          <input class="form-check-input" type="radio" name="gender" id="gridRadios3" value="others">
                          <label class="form-check-label" for="gridRadios3">
                            others
                          </label>
                        </div>
                      </div>
                    </div>
                  </fieldset>
        </div>

        <div class="col-lg-3">
            <div class="form-group">
              <div class="form-group">
                <label class="text-info" for="dob">Date of birth</label>
                <input type="date" class="form-control" name="dob" id="dob"  id="dateofbirth" placeholder="Date of Birth">
              </div>
              <label class="text-info" for="aboutyou">About You</label>
                <textarea class="form-control" rows="2" id="aboutyou" name="aboutyou"  placeholder="About You" required></textarea>
              </div>
            <div class="form-group">
                <label class="text-info" for="picture">Profile Picture</label>
                <input type="file" class="form-control-file" name="avatar" id="picture" placeholder="profile pic">
              </div>
              <div class="form-group">
                <label class="text-info" for="address">Adress</label>
                <textarea class="form-control" rows="2" name="address" id="address"  placeholder="Your Address" required></textarea>
              </div>
              <div class="form-group">
                <label class="text-info" for="jobtitle">Job Title</label>
                  <input type="text" class="form-control" name="jobtitle" id="jobtitle" placeholder="Job title">
              </div>
        </div>
        <div class="col-lg-3">
          
          <div class="form-group">
            <label class="text-info" for="companyname">Company Name</label>
              <input type="text" class="form-control" name="companyname" id="companyname"  placeholder="Company Name">
          </div>
          <div class="form-group">
            <label class="text-info" for="companylocation">Company Location</label>
              <input type="text" class="form-control" name="companylocation" id="companylocation"  placeholder="company Location">
          </div>
            <div class="form-group">
              <label class="text-info" for="salary">Current Salary (in Lac)</label>
                <input type="number" class="form-control" name="salary" id="salary"  placeholder="current salary">
            </div>
            <div class="form-group">
              <label class="text-info" for="aboutcompany">About Company</label>
                <textarea class="form-control" rows="2" name="aboutcompany" id="aboutcompany"  placeholder="Something About Company" required></textarea>
              </div>
              <div class="form-group">
                <label class="text-info" for="dateofjoining">Date of Joining</label>
                <input type="date" class="form-control" name="dateofjoining" id="dateofjoining"  id="dateofjoin" placeholder="Date of Joining">
            </div>
            
        </div>
        <div class="col-lg-3">
          <div class="form-group">
            <label class="text-info" for="duration">Work Duration</label>
              <input type="text" class="form-control" name="duration" id="duration"  placeholder="Duration(MM YYYY - MM YYYY)">
          </div>
          <div class="form-group">
            <label class="text-info" for="industryskill">Industry Skills</label>
              <input type="text" class="form-control" name="industryskill" id="industryskill"  placeholder="Industry Skills">
          </div>
          <div class="form-group">
            <label class="text-info" for="otherskill">Other Skills</label>
              <input type="text" class="form-control" name="otherskill" id="otherskill"  placeholder="others Skills">
          </div>
          <button type="submit" class="btn btn-primary offset-5 mt-2">UPDATE</button>
        </div>
    </div>
</form>
</div>

<% } %>